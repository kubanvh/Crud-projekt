<Window x:Class="Crud.loginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud"
        mc:Ignorable="d"
        Title="loginScreen" Height="450" Width="400" FontSize="16" Background="#FF2D9164">
    <Border Background="#FF3A3A3A" CornerRadius="35" Margin="25">
        <StackPanel Margin="30">
            <Label Content="login" Foreground="white" FontSize="30" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Username" FontSize="20" Foreground="White"/>
            <TextBox Name="txtUsername"  Margin="0 5" FontSize="18" TextWrapping="Wrap" Width="290" Height="40"/>
            <Label Content="Password" FontSize="20" Foreground="White"/>
            <TextBox Name="txtPassword" Margin="0 5" FontSize="18" TextWrapping="Wrap" Width="290" Height="40"/>
            <Button Name="btnLogIn" Click="btnLogIn_Click"  Content="Log In" Margin="30" Background="White" Height="40" Width="183" ></Button>
        </StackPanel>
    </Border>
</Window>

